<form action="/figures" method="post">

  <label for="figure_name">Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name">
  <br>

  <label>Titles</label>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input>
  <% end %>

  <label for="new_title">New Title: </label>
  <input type="text" name="title[name]" id="new_title">
  <br>

  <label>Landmarks</label>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input><br>
  <% end %>

  <label for="new_landmark">New Landmark Name: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="new_landmark">New Landmark Year: </label>
  <input type="text" name="landmark[year_completed]">
  <br>

  <button type="submit">Create New Figure</button>

</form>
